<div class="pull-right">
  <%= link_to("add a job", new_admin_job_path, class:"btn btn-primary") %>
</div>

<table class="table table-boldered">
<thead>
  <tr>
    <td>job.title</td>
    <td>create time</td>
  </tr>
</thead>

<tbody>
  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%# if job.is_hidden %>
        <!-- (hidden) -->
      <%# else %>
        <!-- (public) -->
      <%# end %>
      <!-- 以上这段重构 -->
      <%= render_job_status(job) %>

      <%= link_to(job.title, admin_job_path(job)) %> </td>
    <td><%= job.created_at %></td>
    <td><%= link_to('edit', edit_admin_job_path(job), class:"btn btn-danger",) %>
        <%= link_to('destroy', admin_job_path(job),  class: "btn btn-danger",
        method: :delete, data: {confirm: "are you sure to delete?"})%>

    </td>
  </tr>
  <% end %>
</tbody>


</table>
